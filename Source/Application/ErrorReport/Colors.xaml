<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <Color x:Key="PdfforgeLightGreyColor">#F4F4F4</Color>
    <Color x:Key="PdfforgeLightGreyColor0">#F9F9F9</Color>
    <Color x:Key="PdfforgeDarkGreyColor">#333333</Color>
    <Color x:Key="PdfforgeGreyColor">#DDDDDD</Color>
    <Color x:Key="LightAccentBlue">#50BCF1</Color>

    <SolidColorBrush x:Key="LabelForegroundBrush" Color="{StaticResource PdfforgeDarkGreyColor}" options:Freeze="True" />

    <!-- Text (Box) -->
    <SolidColorBrush x:Key="DefaultTextColorBrush" Color="{StaticResource PdfforgeDarkGreyColor}" options:Freeze="True" />
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="{StaticResource PdfforgeLightGreyColor}" options:Freeze="True" />
    <SolidColorBrush x:Key="TextBoxDisabledBackgroundBrush" Color="{StaticResource PdfforgeLightGreyColor0}" options:Freeze="True" />
    <SolidColorBrush x:Key="TextBoxSelectionBrush" Color="{StaticResource LightAccentBlue}" options:Freeze="True" />

    <!-- Default Button -->
    <SolidColorBrush x:Key="DefaultButtonForegroundBrush" Color="{StaticResource PdfforgeDarkGreyColor}" options:Freeze="True" />
    <SolidColorBrush x:Key="DefaultButtonBackgroundBrush" Color="{StaticResource PdfforgeGreyColor}" options:Freeze="True" />
    <SolidColorBrush x:Key="DefaultButtonBorderBrush" Color="#666" options:Freeze="True" />
</ResourceDictionary>
