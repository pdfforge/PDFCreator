    <Style x:Key="OutputFormatContentControl" TargetType="ContentControl">
        <Setter Property="Content" Value="{DynamicResource FileTypePdf}" />

        <Style.Triggers>
            <DataTrigger Binding="{Binding DataContext.OutputFormat, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static enums:OutputFormat.Png}">
                <Setter Property="Content" Value="{StaticResource FileTypePng}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding DataContext.OutputFormat, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static enums:OutputFormat.Tif}">
                <Setter Property="Content" Value="{StaticResource FileTypeTiff}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding DataContext.OutputFormat, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static enums:OutputFormat.Txt}">
                <Setter Property="Content" Value="{StaticResource FileTypeTxt}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding DataContext.OutputFormat, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static enums:OutputFormat.Jpeg}">
                <Setter Property="Content" Value="{StaticResource FileTypeJpg}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="OutputFormatContentControlStyle" TargetType="ContentControl" x:Shared="False">
        <Setter Property="Content" Value="{StaticResource FileTypePdf}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding}" Value="{x:Static enums:OutputFormat.Png}">
                <Setter Property="Content" Value="{StaticResource FileTypePng}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding}" Value="{x:Static enums:OutputFormat.Tif}">
                <Setter Property="Content" Value="{StaticResource FileTypeTiff}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding}" Value="{x:Static enums:OutputFormat.Txt}">
                <Setter Property="Content" Value="{StaticResource FileTypeTxt}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding}" Value="{x:Static enums:OutputFormat.Jpeg}">
                <Setter Property="Content" Value="{StaticResource FileTypeJpg}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- The template is used in the PrintJobView to display the current icon based on the  -->
    <DataTemplate x:Key="FileTypeIconDropDownTemplate">
        <StackPanel Margin="10">
            <StackPanel.Resources>
                <converter:OutputFormatToTextConverter x:Key="OutputFormatToTextConverter" />
            </StackPanel.Resources>

            <ContentControl MaxWidth="68" Style="{StaticResource OutputFormatContentControl}" />

            <TextBlock  Margin="0 10 0 0" FontWeight="Bold" TextAlignment="Center" Text="{Binding DataContext.OutputFormat, RelativeSource={RelativeSource AncestorType=UserControl},Converter={StaticResource OutputFormatToTextConverter}}" />
        </StackPanel>
    </DataTemplate>
